<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- add servlet -->
    <servlet>
        <servlet-name>EquationServlet</servlet-name>
        <servlet-class>org.mrkaschenko.servlets.EquationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EquationServlet</servlet-name>
        <url-pattern>/calc/equation</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ResultServlet</servlet-name>
        <servlet-class>org.mrkaschenko.servlets.ResultServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ResultServlet</servlet-name>
        <url-pattern>/calc/result</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ValueServlet</servlet-name>
        <servlet-class>org.mrkaschenko.servlets.ValueServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ValueServlet</servlet-name>
        <url-pattern>/calc/*</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>org.mrkaschenko.filters.SessionFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <servlet-name>ValueServlet</servlet-name>
        <servlet-name>EquationServlet</servlet-name>
        <servlet-name>ResultServlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>ValidEquationFilter</filter-name>
        <filter-class>org.mrkaschenko.filters.ValidEquationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ValidEquationFilter</filter-name>
        <servlet-name>EquationServlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>ValidUrlFilter</filter-name>
        <filter-class>org.mrkaschenko.filters.ValidUrlFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ValidUrlFilter</filter-name>
        <servlet-name>ValueServlet</servlet-name>
    </filter-mapping>


    <filter>
        <filter-name>ValidValueFilter</filter-name>
        <filter-class>org.mrkaschenko.filters.ValidValueFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ValidValueFilter</filter-name>
        <servlet-name>ValueServlet</servlet-name>
    </filter-mapping>
</web-app>
